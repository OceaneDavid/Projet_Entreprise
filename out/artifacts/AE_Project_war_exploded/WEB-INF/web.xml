<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <welcome-file-list>
        <welcome-file>Connexion</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>Accueil</servlet-name>
        <servlet-class>Accueil</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>Connexion</servlet-name>
        <servlet-class>Connexion</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>Inscription</servlet-name>
        <servlet-class>Inscription</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>Post</servlet-name>
        <servlet-class>Post</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>Commentaire</servlet-name>
        <servlet-class>Commentaire</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Accueil</servlet-name>
        <url-pattern>/Accueil</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Connexion</servlet-name>
        <url-pattern>/Connexion</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Inscription</servlet-name>
        <url-pattern>/Inscription</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Post</servlet-name>
        <url-pattern>/Post</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Commentaire</servlet-name>
        <url-pattern>/Commentaire</url-pattern>
    </servlet-mapping>

</web-app>